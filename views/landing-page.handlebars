<!-- TODO: create demo activities -->
<div class="container">
  <div class="row">
    <div class="col s12">
      <h6>See what is happening around you...</h6>
      <div class="input-field">
        <label for="zipCode">Enter your zipcode to find activities:</label>
        <input type="text" id="zipCode" class="validate" />
        <span class="helper-text"></span>
      </div>
      <button class="zipSearch btn">Search</button>
    </div>
  </div>
</div>
{{#if activities}}
  {{#each activities as |activity|}}
    <div class="row">
      <div class="col">
        <div class="card black-text">
          <span class="card-title">{{activity.title}}</span>
          <div class="card-content">
            <p>{{markdown_to_html activity.description}}</p>
          </div>
          <div class="card-action">
            {{#if loggedIn}}
              <a href="/activity/{{id}}">Learn more!</a>
            {{/if}}
            <a href="/signup">Learn more!</a>
          </div>
        </div>
      </div>
    </div>

  {{/each}}
{{/if}}
<script src="/javascript/landing.js"></script>