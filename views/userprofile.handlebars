<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content">

          <div class="row">

            <span
              class="card-title white-text"
              id="user-username"
            >{{user.username}}</span>
            <span id="user-id" data-user-id="{{user.id}}"></span>

            <div class="row">

              <div class="col s12">
                <div class="card">
                  <div class="card-content">
                    <span class="card-title">Basic Info</span>
                    <p id="user-email">Email: {{user.email}}</p>
                    <p id="user-zip">Zip Code : {{user.zip}}</p>
                  </div>
                  <div class="card-action">
                    <a
                      class="btn waves-effect waves-light modal-trigger"
                      data-target="edit-basic-info-modal"
                      id="edit-basic-info-button"
                    >Edit Basic Info
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">

              <div class="col s12 m6">
                <div class="card">
                  <div class="card-content">
                    <span class="card-title black-text">Dietary Preferences</span>
                    <div>
                      {{#each user.dietary_preferences as |df|}}
                        <span
                          class="badge green white-text left"
                        >{{df.name}}</span>
                      {{/each}}
                    </div>
                  </div>
                  <div class="card-action">
                    <a
                      data-target="edit-dietary-preferences-modal"
                      class="btn modal-trigger"
                      id="edit-dietary-pref-button"
                    >Edit Dietary Preferences</a>
                  </div>
                </div>
              </div>
              <div class="col s12 m6">
                <div class="card">
                  <div class="card-content">
                    <span class="card-title black-text">Interests</span>
                    <div>
                      {{#each user.interests as |interest|}}
                        <span
                          class="badge green white-text left"
                        >{{interest.name}}</span>
                      {{/each}}
                    </div>
                  </div>
                  <div class="card-action">
                    <a
                      data-target="edit-interests-modal"
                      class="btn modal-trigger"
                      id="edit-interests-button"
                    >Edit Interests</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="edit-basic-info-modal" class="modal modal-fixed-footer">
  <div class="modal-content">
    <h4>Edit Basic Info</h4>
    <form id="edit-basic-info-form">
      <div class="input-field">
        <label for="username">Username</label>
        <input type="text" id="edit-username" />
      </div>
      <div class="input-field">
        <label for="zip">Zip Code</label>
        <input type="text" id="edit-zip" />
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <a class="modal-close waves-effect waves-green btn-flat">Cancel</a>
    <a
      id="save-edit-basic-info-button"
      class="waves-effect waves-green btn-flat"
    >Save</a>
  </div>
</div>

<div id="edit-dietary-preferences-modal" class="modal modal-fixed-footer">
  <div class="modal-content">
    <h4>Edit Dietary Preferences</h4>
    <form id="edit-dietary-preferences-form">
      <div class="input-field col s12">
        <select multiple id="dietary-pref-select">
          <option value="" disabled selected>Select your dietary preferences</option>

        </select>
        <label>Dietary Preferences</label>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <a class="modal-close waves-effect waves-green btn-flat">Cancel</a>
    <a
      id="save-edit-dietary-prefs-button"
      class="waves-effect waves-green btn-flat"
    >Save</a>
  </div>
</div>

<div id="edit-interests-modal" class="modal modal-fixed-footer">
  <div class="modal-content">
    <h4>Edit Interests</h4>
    <form id="edit-interests-form">
      <div class="input-field col s12">
        <select multiple id="interests-select">
          <option value="" disabled selected>Select your interests</option>

        </select>
        <label>Interests</label>
      </div>
    </form>
  </div>
  <div class="modal-footer">
    <a class="modal-close waves-effect waves-green btn-flat">Close</a>
    <a
      id="save-edit-interests-button"
      class="waves-effect waves-green btn-flat"
    >Save</a>
  </div>
</div>

<script src="/javascript/profile.js"></script>
