<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <span class="card-title black-text">Sign Up</span>
          <form class="signup-form">

            <div class="input-field">
              <label for="username-signup">Username</label>
              <input type="text" id="username-signup" />
            </div>

            <div class="input-field">
              <label for="email-signup">Email</label>
              <input type="email" id="email-signup" class="validate" />
            </div>

            <div class="input-field">
              <label for="password-signup">Password</label>
              <input type="password" id="password-signup" />
            </div>

            <div class="input-field">
              <label for="zipcode-signup">Zipcode</label>
              <input type="text" id="zipcode-signup" />
            </div>

            <div class="row">

              <div class="col s6">
                <button
                  class="btn waves-effect waves-light"
                  type="submit"
                  name="action"
                >Submit!
                  <i class="material-icons right">send</i>
                </button>
              </div>

              <div class="col s6">
                <a
                  class="btn waves-effect waves-light btn-flat"
                  href="/login"
                >Already a member?
                  <i class="material-icons right"></i>
                </a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
